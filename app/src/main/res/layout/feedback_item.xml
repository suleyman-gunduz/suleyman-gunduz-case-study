<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/listHorizontalPadding"
    android:paddingEnd="@dimen/listHorizontalPadding"
    android:paddingTop="@dimen/listVerticalPadding"
    android:paddingBottom="@dimen/listVerticalPadding">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/layout_star"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/blueTextColor"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:id="@+id/layout_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_star5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty"/>

                    <ImageView
                        android:id="@+id/image_star4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty"/>

                    <ImageView
                        android:id="@+id/image_star3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty"/>

                    <ImageView
                        android:id="@+id/image_star2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty"/>

                    <ImageView
                        android:id="@+id/image_star1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star_empty"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/text_platform"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textColor"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/text_browser_with_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textColor"
                    android:gravity="end"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/blueTextColor"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/map_route_icon" />

        </LinearLayout>

</RelativeLayout>