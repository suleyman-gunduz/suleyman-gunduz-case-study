<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suleymangunduz.casestudyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".CaseStudyApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.suleymangunduz.casestudyapp.ui.feedback.FeedBackActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.suleymangunduz.casestudyapp.ui.statistics.StatisticsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.suleymangunduz.casestudyapp.ui.statistics.chart.ChartActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>